{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "allowJs": true,
        "skipLibCheck": true,

        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
